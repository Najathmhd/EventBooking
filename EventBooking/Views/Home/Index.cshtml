@model IEnumerable<EventBooking.Models.Event>
@{
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION -->
<div class="hero-section position-relative overflow-hidden" style="margin-top: -80px;">
    <!-- Parallax Background -->
    <div class="hero-bg" style="background-image: url('https://images.unsplash.com/photo-1514525253440-b393452e8d26?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');"></div>
    
    <!-- Hero Content -->
    <div class="container position-relative z-1">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-8 animate-fade-up">
                <div class="d-inline-flex align-items-center gap-2 px-3 py-1 rounded-pill glass-panel mb-4 border border-light border-opacity-10">
                    <span class="badge bg-primary text-black rounded-pill">NEW</span>
                    <span class="small text-white opacity-75">Connect with your community</span>
                </div>
                <h1 class="display-2 fw-bold lh-1 mb-4 text-white" style="letter-spacing: -2px;">
                    Ignite Your <br />
                    <span class="text-gradient-gold">Cultural Spirit</span>
                </h1>
                <p class="lead text-muted mb-5 w-75">
                    Experience the pulse of the city through exclusive concerts, avant-garde exhibitions, and immersive theatre. Your gateway to the metropolitan arts.
                </p>
                <div class="d-flex gap-3">
                    <a asp-controller="Events" asp-action="Index" class="btn btn-primary d-flex align-items-center gap-2">
                        Explore Events <i class="fas fa-arrow-right"></i>
                    </a>
                    <a asp-controller="Members" asp-action="Register" class="btn btn-outline-light">
                        Become a Member
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="position-absolute bottom-0 start-50 translate-middle-x mb-5 animate-bounce">
        <i class="fas fa-chevron-down text-white opacity-50 fa-lg"></i>
    </div>
    
    <div class="divider-wave">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="shape-fill"></path>
        </svg>
    </div>
</div>

<!-- CATEGORIES SECTION -->
<section class="py-5 position-relative">
    <div class="container">
        <div class="text-center mb-5 reveal">
            <h6 class="text-gold text-uppercase tracking-widest fw-bold mb-2">Curated Collections</h6>
            <h2 class="display-6 fw-bold text-white">Browse by Genre</h2>
        </div>

        <div class="row g-4 justify-content-center">
            <!-- Concerts -->
            <div class="col-6 col-md-3 reveal delay-1">
                <a asp-controller="Events" asp-action="Index" asp-route-category="Concert" class="text-decoration-none">
                    <div class="glass-panel p-4 text-center h-100 glass-card-hover position-relative overflow-hidden group">
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient opacity-0 transition-all group-hover:opacity-10"></div>
                        <div class="rounded-circle bg-white bg-opacity-10 p-4 d-inline-block mb-3 mx-auto">
                            <i class="fas fa-music fa-2x text-gold"></i>
                        </div>
                        <h5 class="text-white mb-0">Concerts</h5>
                        <small class="text-muted">Live Performances</small>
                    </div>
                </a>
            </div>
            
            <!-- Theatre -->
            <div class="col-6 col-md-3 reveal delay-2">
                <a asp-controller="Events" asp-action="Index" asp-route-category="Theatre" class="text-decoration-none">
                    <div class="glass-panel p-4 text-center h-100 glass-card-hover">
                         <div class="rounded-circle bg-white bg-opacity-10 p-4 d-inline-block mb-3 mx-auto">
                            <i class="fas fa-masks-theater fa-2x text-warning"></i>
                        </div>
                        <h5 class="text-white mb-0">Theatre</h5>
                        <small class="text-muted">Dramatic Arts</small>
                    </div>
                </a>
            </div>

            <!-- Exhibitions -->
            <div class="col-6 col-md-3 reveal delay-3">
                <a asp-controller="Events" asp-action="Index" asp-route-category="Exhibition" class="text-decoration-none">
                    <div class="glass-panel p-4 text-center h-100 glass-card-hover">
                         <div class="rounded-circle bg-white bg-opacity-10 p-4 d-inline-block mb-3 mx-auto">
                            <i class="fas fa-palette fa-2x text-info"></i>
                        </div>
                        <h5 class="text-white mb-0">Exhibitions</h5>
                        <small class="text-muted">Visual Galleries</small>
                    </div>
                </a>
            </div>

             <!-- Workshops -->
            <div class="col-6 col-md-3 reveal delay-3">
                <a asp-controller="Events" asp-action="Index" asp-route-category="Workshop" class="text-decoration-none">
                    <div class="glass-panel p-4 text-center h-100 glass-card-hover">
                         <div class="rounded-circle bg-white bg-opacity-10 p-4 d-inline-block mb-3 mx-auto">
                            <i class="fas fa-lightbulb fa-2x text-success"></i>
                        </div>
                        <h5 class="text-white mb-0">Workshops</h5>
                        <small class="text-muted">Learn & Create</small>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- FEATURED EVENTS (Reused logic but new styling) -->
<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-end mb-5 reveal">
            <div>
                 <h6 class="text-gold text-uppercase tracking-widest fw-bold mb-2">Don't Miss Out</h6>
                 <h2 class="display-6 fw-bold text-white">Upcoming Highlights</h2>
            </div>
            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-light rounded-pill px-4 d-none d-md-block">View All</a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 reveal">
                        <div class="card glass-panel h-100 border-0 overflow-hidden glass-card-hover group">
                            <!-- Image -->
                            <div class="position-relative" style="height: 240px;">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://images.unsplash.com/photo-1492684223066-81342ee5ff30" : item.ImageUrl)" 
                                     class="w-100 h-100 object-fit-cover transition-transform group-hover:scale-105" 
                                     alt="@item.Title" />
                                <div class="position-absolute top-0 end-0 m-3 badge bg-black bg-opacity-50 backdrop-blur text-white px-3 py-2 rounded-pill border border-white border-opacity-10">
                                    <i class="far fa-calendar me-2"></i>@item.EventDate.ToString("MMM dd")
                                </div>
                                <div class="position-absolute bottom-0 start-0 w-100 p-3 bg-gradient-to-t from-black to-transparent">
                                     <span class="badge bg-primary text-black">@item.Category?.Name</span>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="card-body p-4 d-flex flex-column">
                                <h5 class="card-title fw-bold text-white mb-2">@item.Title</h5>
                                <div class="d-flex align-items-center text-muted small mb-3">
                                    <i class="fas fa-map-marker-alt me-2 text-gold"></i>
                                    <span>@item.Venue?.Name</span>
                                </div>
                                <p class="card-text text-white opacity-75 small flex-grow-1 line-clamp-2">
                                    @item.Description
                                </p>
                                <div class="mt-4 pt-3 border-top border-light border-opacity-10 d-flex justify-content-between align-items-center">
                                    <div class="text-white">
                                        <span class="small text-muted d-block">Tickets from</span>
                                        <span class="h5 fw-bold mb-0">£@item.Price.ToString("F0")</span>
                                    </div>
                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light rounded-pill px-4">
                                        Book Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- STATS SECTION -->
<section class="py-5 mb-5 reveal">
    <div class="container">
        <div class="glass-panel p-5 rounded-4 position-relative overflow-hidden">
             <!-- Decorative Glow -->
             <div class="position-absolute top-50 start-50 translate-middle" style="width: 300px; height: 300px; background: var(--primary); filter: blur(100px); opacity: 0.15;"></div>

             <div class="row text-center position-relative z-1">
                 <div class="col-md-4 mb-4 mb-md-0 border-end border-light border-opacity-10">
                     <div class="display-4 fw-bold text-white mb-2">250+</div>
                     <div class="text-gold text-uppercase tracking-widest small fw-bold">Events Hosted</div>
                 </div>
                 <div class="col-md-4 mb-4 mb-md-0 border-end border-light border-opacity-10">
                     <div class="display-4 fw-bold text-white mb-2">10k+</div>
                     <div class="text-gold text-uppercase tracking-widest small fw-bold">Tickets Sold</div>
                 </div>
                 <div class="col-md-4">
                     <div class="display-4 fw-bold text-white mb-2">50+</div>
                     <div class="text-gold text-uppercase tracking-widest small fw-bold">Artists Featured</div>
                 </div>
             </div>
        </div>
    </div>
</section>
