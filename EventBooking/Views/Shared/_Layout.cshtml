<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Metropolitan Cultural Council</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top transition-all">
            <div class="container">
                <a class="navbar-brand fw-bold tracking-widest text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    EVENTBOOKING
                </a>
                <button class="navbar-toggler border-0 text-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto gap-1 gap-lg-3 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Events" asp-action="Index">Events</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Admin</a>
                                <ul class="dropdown-menu glass-panel border-0 shadow-lg mt-2">
                                    <li><a class="dropdown-item text-white hover-bg-light" asp-controller="Events" asp-action="Index"><i class="fas fa-calendar-alt me-2 text-primary"></i>Events</a></li>
                                    <li><a class="dropdown-item text-white hover-bg-light" asp-controller="Booking" asp-action="Index"><i class="fas fa-ticket-alt me-2 text-primary"></i>Bookings</a></li>
                                    <li><a class="dropdown-item text-white hover-bg-light" asp-controller="Reviews" asp-action="Index"><i class="fas fa-star me-2 text-primary"></i>Reviews</a></li>
                                    <li><a class="dropdown-item text-white hover-bg-light" asp-controller="Inquiry" asp-action="Index"><i class="fas fa-envelope me-2 text-primary"></i>Inquiries</a></li>
                                    <li><hr class="dropdown-divider bg-light opacity-25"></li>
                                    <li><a class="dropdown-item text-white hover-bg-light" asp-controller="Members" asp-action="Index"><i class="fas fa-users-cog me-2 text-primary"></i>Registry</a></li>
                                </ul>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Wrapper (Note: Container is removed to allow full-width heroes) -->
    <main role="main" class="pb-3 animate-fade-in">
        @RenderBody()
    </main>

    <footer class="mt-auto py-5 relative overflow-hidden" style="background: #020617; border-top: 1px solid var(--glass-border);">
        <!-- Ambient Glow -->
        <div style="position: absolute; top: 0; left: 50%; transform: translateX(-50%); width: 80%; height: 1px; background: linear-gradient(90deg, transparent, var(--primary), transparent); opacity: 0.5;"></div>
        
        <div class="container">
            <div class="row gy-5">
                <div class="col-lg-4">
                    <a class="navbar-brand fw-bold tracking-widest text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    EVENTBOOKING
                </a>
                    <p class="text-muted small">Your gateway to the city's finest events. Simple, secure, and seamless.</p>
                </div>
                <div class="col-lg-2 col-6">
                    <h6 class="text-white fw-bold mb-3">Discover</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2 small">
                        <li><a asp-controller="Events" asp-action="Index" class="text-muted text-decoration-none hover-text-white">Concerts</a></li>
                        <li><a asp-controller="Events" asp-action="Index" class="text-muted text-decoration-none hover-text-white">Exhibitions</a></li>
                        <li><a asp-controller="Events" asp-action="Index" class="text-muted text-decoration-none hover-text-white">Theatre</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-6">
                    <h6 class="text-white fw-bold mb-3">Community</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2 small">
                        <li><a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none hover-text-white">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-muted text-decoration-none hover-text-white">Support</a></li>
                        <li><a href="#" class="text-muted text-decoration-none hover-text-white">Careers</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="text-white fw-bold mb-3">Stay Inspired</h6>
                    <form class="position-relative">
                        <input type="email" class="form-control rounded-pill pe-5" placeholder="Enter your email" style="background: rgba(255,255,255,0.05); border-color: rgba(255,255,255,0.1);">
                        <button class="btn btn-sm btn-primary rounded-circle position-absolute top-0 end-0 m-1" style="width: 38px; height: 38px;">
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </form>
                </div>
            </div>
            <div class="row mt-5 pt-4 border-top border-light border-opacity-10 justify-content-between align-items-center">
                <div class="col-md-6 text-muted small">
                    &copy; 2026 Metropolitan Cultural Council. All rights reserved.
                </div>
                <div class="col-md-6 text-md-end d-flex gap-3 justify-content-md-end">
                    <a href="#" class="text-muted hover-text-white"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-muted hover-text-white"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-muted hover-text-white"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Navbar Scroll Effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled', 'shadow-lg');
            } else {
                navbar.classList.remove('scrolled', 'shadow-lg');
            }
        });
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
