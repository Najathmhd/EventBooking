@model IEnumerable<EventBooking.Models.Booking>

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Global Metropolitan Reservations" : "My Cultural Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-slide-up">
        <div>
            <div class="accent-line mb-3"></div>
            <h1 class="display-5 fw-bold text-dark mb-0">@(User.IsInRole("Admin") ? "Global Reservations" : "My Cultural Wallet")</h1>
            <p class="lead text-muted mb-0">@(User.IsInRole("Admin") ? "Oversee all metropolitan access grants." : "Your curated collection of upcoming experiences.")</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 p-5 text-center animate-slide-up" style="animation-delay: 0.2s">
            <div class="mb-4">
                <div class="p-4 rounded-circle" style="background: rgba(255,255,255,0.03)">
                    <i class="fas fa-folder-open fa-5x text-muted opacity-25"></i>
                </div>
            </div>
            <h3 class="fw-bold">Portfolio Empty</h3>
            <p class="text-muted mb-4 mx-auto" style="max-width: 500px;">You have no active reservations at this time. Explore the metropolitan registry to discover and secure upcoming experiences.</p>
            <div>
                <a asp-controller="Events" asp-action="Index" class="btn btn-primary px-5 shadow">Discover Experiences</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4 animate-slide-up" style="animation-delay: 0.2s">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 reveal">
                    <div class="card h-100 shadow-sm border-0 overflow-hidden reservation-card hover-tilt">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="bg-soft-primary p-3 rounded-3">
                                    <i class="fas fa-ticket-alt text-primary fa-lg"></i>
                                </div>
                                @if (item.IsVerified)
                                {
                                    <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3">VERIFIED</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3">PENDING</span>
                                }
                            </div>

                            <h5 class="fw-bold mb-1">@item.Event?.Title</h5>
                            <div class="small text-muted mb-4">
                                <i class="far fa-calendar-check me-2"></i>@item.Event?.EventDate.ToString("MMMM dd, yyyy")
                            </div>
                            
                            <div class="p-3 rounded-3 mb-4" style="background: rgba(255,255,255,0.03); border: 1px solid var(--glass-border);">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted small">Venue Access:</span>
                                    <span class="fw-bold small text-dark">@item.Event?.Venue?.Name</span>
                                </div>
                                 <div class="d-flex justify-content-between mb-2">
                                     <span class="text-muted small">Allocated Seats:</span>
                                     <span class="fw-bold text-dark">@item.TicketQuantity</span>
                                 </div>
                                 <div class="d-flex justify-content-between">
                                     <span class="text-muted small">Total Investment:</span>
                                     <span class="fw-bold text-success">Â£@item.TotalPrice.ToString("F2")</span>
                                 </div>
                                 @if (User.IsInRole("Admin"))
                                 {
                                     <div class="mt-3 pt-3 border-top">
                                         <div class="small fw-bold text-uppercase text-muted">Citizen</div>
                                         <div class="fw-bold text-primary">@item.Member?.FullName</div>
                                         <div class="small text-muted">@item.Member?.Email</div>
                                     </div>
                                 }
                             </div>

                            <div class="d-grid gap-2">
                                <a asp-controller="Booking" asp-action="Ticket" asp-route-id="@item.BookingId" class="btn btn-primary rounded-pill shadow-sm">
                                    View Digital Pass <i class="fas fa-qrcode ms-2"></i>
                                </a>
                                @if (User.IsInRole("Admin") && !item.IsVerified)
                                {
                                    <form asp-action="VerifyBooking" method="post" class="d-grid">
                                        <input type="hidden" name="id" value="@item.BookingId" />
                                        <button type="submit" class="btn btn-outline-success rounded-pill shadow-sm">
                                            Verify Pass <i class="fas fa-check-circle ms-2"></i>
                                        </button>
                                    </form>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                     <button class="btn btn-soft-success rounded-pill shadow-sm disabled" disabled>
                                        <i class="fas fa-check-double me-2"></i>Verified
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .reservation-card:hover { transform: translateY(-5px); }
</style>
