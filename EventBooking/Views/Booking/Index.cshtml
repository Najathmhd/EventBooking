@model IEnumerable<EventBooking.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-5">
    <div class="mb-5">
        <h1 class="display-5 fw-bold text-gradient mb-0">My Reservations</h1>
        <p class="text-muted">Keep track of your upcoming cultural experiences and tickets.</p>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 bg-white p-5 text-center">
            <div class="mb-4">
                <i class="fas fa-ticket-alt fa-5x text-light"></i>
            </div>
            <h3>No bookings found yet</h3>
            <p class="text-muted mb-4">Start exploring events and reserve your spot today!</p>
            <div>
                <a asp-controller="Events" asp-action="Index" class="btn btn-primary px-5">Explore Events</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 position-relative overflow-hidden">
                        <div class="bg-primary py-2 px-4 shadow-sm" style="position: absolute; top: 15px; right: -30px; transform: rotate(45deg); width: 120px; z-index: 10;">
                            <span class="text-white small fw-bold">BOOKED</span>
                        </div>
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-soft-primary p-3 rounded-3 me-3">
                                    <i class="fas fa-calendar-check text-primary fa-lg"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">@item.Event?.Title</h5>
                                    <span class="text-muted small">@item.Event?.EventDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                            </div>
                            
                            <div class="bg-light p-3 rounded-3 mb-4">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted small">Venue:</span>
                                    <span class="fw-bold small">@item.Event?.Venue?.Name</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted small">TicketsReserved:</span>
                                    <span class="badge bg-primary rounded-pill">@item.TicketQuantity</span>
                                </div>
                            </div>

                            <div class="d-grid mt-4">
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@item.EventId" class="btn btn-outline-primary btn-sm rounded-pill">
                                    View Event Info
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .bg-soft-primary { background: rgba(99,102,241,0.1); }
</style>
