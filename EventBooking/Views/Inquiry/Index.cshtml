@model IEnumerable<EventBooking.Models.Inquiry>

@{
    ViewData["Title"] = "Inquiry Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-slide-up">
        <div>
             <div class="accent-line mb-3"></div>
            <h1 class="display-5 fw-bold text-dark mb-0">Citizen Inquiries</h1>
            <p class="lead text-muted mb-0">Oversee and respond to questions from the community.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 p-5 text-center animate-slide-up" style="animation-delay: 0.1s">
            <div class="text-muted opacity-25 mb-4">
                <i class="fas fa-envelope-open fa-4x"></i>
            </div>
            <h4 class="fw-bold">No Inquiries Found</h4>
            <p class="text-muted">The inbox is currently empty.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 overflow-hidden animate-slide-up" style="animation-delay: 0.1s">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Inquirer</th>
                            <th class="py-3">Email</th>
                            <th class="py-3">Message</th>
                            <th class="py-3">Date</th>
                            <th class="py-3">Status</th>
                            <th class="pe-4 py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsResolved ? "bg-light opacity-75" : "")">
                                <td class="ps-4 fw-bold">@item.Name</td>
                                <td><a href="mailto:@item.Email" class="text-decoration-none">@item.Email</a></td>
                                <td style="max-width: 300px;">
                                    <div class="text-truncate" title="@item.Message">@item.Message</div>
                                </td>
                                <td class="text-muted small">@item.InquiryDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (item.IsResolved)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">Resolved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 rounded-pill px-3">Pending</span>
                                    }
                                </td>
                                <td class="pe-4 text-end">
                                    <form asp-action="MarkResolved" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.InquiryId" />
                                        <button type="submit" class="btn btn-sm @(item.IsResolved ? "btn-outline-secondary" : "btn-success shadow-sm rounded-pill")">
                                            @if (item.IsResolved)
                                            {
                                                <span><i class="fas fa-undo me-1"></i> Reopen</span>
                                            }
                                            else
                                            {
                                                <span><i class="fas fa-check me-1"></i> Resolve</span>
                                            }
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
