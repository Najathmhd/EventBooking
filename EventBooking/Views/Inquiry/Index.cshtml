@model IEnumerable<EventBooking.Models.Inquiry>

@{
    ViewData["Title"] = "Inquiry Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 pt-navbar">
    <div class="row align-items-end mb-5 animate-slide-up">
        <div class="col-lg-6">
             <div class="accent-line mb-3"></div>
            <h1 class="display-5 fw-bold text-white mb-0">Citizen Inquiries</h1>
            <p class="lead text-white-50 mb-0">Oversee and respond to questions from the community.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card glass-panel border-0 p-5 text-center animate-slide-up" style="animation-delay: 0.1s">
            <div class="text-white-50 opacity-25 mb-4">
                <i class="fas fa-envelope-open fa-4x"></i>
            </div>
            <h4 class="fw-bold text-white">No Inquiries Found</h4>
            <p class="text-white-50">The inbox is currently empty.</p>
        </div>
    }
    else
    {
        <div class="card glass-panel border-0 overflow-hidden animate-slide-up" style="animation-delay: 0.1s">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-white">
                    <thead>
                        <tr class="border-bottm border-white border-opacity-10">
                            <th class="ps-4 py-3 text-gold">Inquirer</th>
                            <th class="py-3 text-gold">Email</th>
                            <th class="py-3 text-gold">Message</th>
                            <th class="py-3 text-gold">Date</th>
                            <th class="pe-4 py-3 text-end text-gold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom border-white border-opacity-5">
                                <td class="ps-4 fw-bold">@item.Name</td>
                                <td><a href="mailto:@item.Email" class="text-primary text-decoration-none">@item.Email</a></td>
                                <td style="max-width: 300px;">
                                    <div class="text-truncate text-white-50" title="@item.Message">@item.Message</div>
                                </td>
                                <td class="text-white-50 small">@item.InquiryDate.ToString("MMM dd, yyyy")</td>
                                <td class="pe-4 text-end">
                                    <a href="mailto:@item.Email?subject=Regarding your inquiry at EventBooking" class="btn btn-sm btn-outline-light rounded-pill px-3">
                                        <i class="fas fa-reply me-1"></i> Reply
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
