@model EventBooking.Models.Event

@{
    ViewData["Title"] = "Refine Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 animate-slide-up">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-5">
                        <div class="bg-soft-primary d-inline-block p-3 rounded-circle mb-3">
                            <i class="fas fa-edit text-primary fa-2x"></i>
                        </div>
                        <h2 class="fw-bold">Refine Details</h2>
                        <p class="text-muted">Making some updates to <strong>@Model.Title</strong>?</p>
                    </div>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 small py-2"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group mb-4">
                            <label asp-for="Title" class="form-label fw-bold small">Event Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-bold small">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4">@Model.Description</textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="EventDate" class="form-label fw-bold small">Updated Date & Time</label>
                            <input asp-for="EventDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="EventDate" class="text-danger small"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label asp-for="VenueId" class="form-label fw-bold small">Venue</label>
                                <select asp-for="VenueId" class="form-select" asp-items="ViewBag.VenueId"></select>
                                <span asp-validation-for="VenueId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label fw-bold small">Category</label>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-primary btn-lg py-3 shadow">
                                <i class="fas fa-save me-2"></i>Save Final Changes
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Index" class="text-muted text-decoration-none small"><i class="fas fa-arrow-left me-2"></i>Cancel updates</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .bg-soft-primary { background: rgba(99,102,241,0.1); }
</style>
