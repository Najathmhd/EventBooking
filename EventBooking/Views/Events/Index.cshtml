@model IEnumerable<EventBooking.Models.Event>

@{
    ViewData["Title"] = "Discover Cultural Experiences";
}

<div class="container py-5" style="margin-top: 100px;">
    <div class="row align-items-end mb-5 animate-slide-up">
        <div class="col-lg-6">
            <div class="accent-line mb-3"></div>
            <h1 class="display-4 fw-bold text-white mb-0">Discover Experiences</h1>
            <p class="lead text-white-50 mb-0">Join the vibrant metropolitan community at our verified cultural venues.</p>
        </div>
        <div class="col-lg-6 text-lg-end mt-4 mt-lg-0">
            @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
            {
                <a asp-action="Create" class="btn btn-primary shadow-sm mb-2">
                    <i class="fas fa-plus-circle me-2"></i>Curate Event
                </a>
            }
        </div>
    </div>

    @* Search and Filter Section *@
    <div class="card border-0 shadow-lg p-4 mb-5 animate-slide-up" style="background: var(--bg-card); border-radius: 24px; animation-delay: 0.1s;">
        <form asp-action="Index" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted text-uppercase tracking-wider">Search Narrative</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-0 ps-0 pe-2"><i class="fas fa-search text-primary"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control border-0 bg-transparent text-white" placeholder="Finding events..." />
                    </div>
                    <div class="accent-line w-100" style="height: 1px; opacity: 0.2;"></div>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted text-uppercase tracking-wider">Category</label>
                    <select name="categoryId" class="form-select border-0 bg-transparent text-white" asp-items="ViewBag.CategoryId">
                        <option value="">All Disciplines</option>
                    </select>
                    <div class="accent-line w-100" style="height: 1px; opacity: 0.2;"></div>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted text-uppercase tracking-wider">Venue</label>
                    <select name="venueId" class="form-select border-0 bg-transparent text-white" asp-items="ViewBag.VenueId">
                        <option value="">All Locations</option>
                    </select>
                    <div class="accent-line w-100" style="height: 1px; opacity: 0.2;"></div>
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted">From</label>
                    <input type="date" name="startDate" class="form-control shadow-sm" value="@ViewData["StartDate"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted">To</label>
                    <input type="date" name="endDate" class="form-control shadow-sm" value="@ViewData["EndDate"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted">Min Price</label>
                    <input type="number" name="minPrice" class="form-control shadow-sm" placeholder="£0" value="@ViewData["MinPrice"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small fw-bold text-muted">Max Price</label>
                    <input type="number" name="maxPrice" class="form-control shadow-sm" placeholder="£1000" value="@ViewData["MaxPrice"]" />
                </div>
                <div class="col-md-12 text-end mt-3">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-filter me-2"></i>Filter
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm ms-2">Reset</a>
                </div>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 p-5 text-center animate-slide-up" style="animation-delay: 0.2s">
            <div class="mb-4">
                <div class="bg-soft-primary d-inline-block p-4 rounded-circle">
                    <i class="fas fa-calendar-day fa-4x text-primary opacity-50"></i>
                </div>
            </div>
            <h3 class="fw-bold">Quiet for now...</h3>
            <p class="text-muted mb-4 mx-auto" style="max-width: 500px;">Our curators are currently preparing new experiences. Check back soon or sign up for notifications to be the first to know.</p>
            @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
            {
                <a asp-action="Create" class="btn btn-primary px-5">Add the City's First Event</a>
            }
        </div>
    }
    else
    {
        <div class="row g-4 animate-slide-up" style="animation-delay: 0.2s">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-3 reveal">
                    <div class="card h-100 border-0 shadow-sm overflow-hidden event-card-premium hover-tilt">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <div class="position-relative" style="height: 200px;">
                                <img src="@item.ImageUrl" alt="@item.Title" class="w-100 h-100 object-fit-cover" />
                                <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(to bottom, rgba(0,0,0,0.3), transparent);"></div>
                            </div>
                        }
                        else
                        {
                            <div style="height: 10px; background: var(--primary-gradient);"></div>
                        }
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="d-flex gap-2">
                                    <span class="badge bg-soft-primary text-primary px-3 py-2 rounded-pill small fw-bold">@item.Category?.Name</span>
                                    <span class="badge bg-soft-success text-success px-3 py-2 rounded-pill small fw-bold">£@item.Price.ToString("F2")</span>
                                </div>
                                <div class="text-muted small">
                                    <i class="far fa-calendar-alt me-1"></i> @item.EventDate.ToString("MMM dd")
                                </div>
                            </div>
                            
                            <h4 class="card-title fw-bold mb-3">@item.Title</h4>
                            <p class="card-text text-muted small mb-4" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                @item.Description
                            </p>
                            
                            <div class="d-flex align-items-center mb-4">
                                <div class="p-2 rounded-circle me-3 text-primary" style="background: rgba(255,255,255,0.03)">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="small fw-bold text-light">@item.Venue?.Name</div>
                            </div>

                            <div class="d-grid mt-auto gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary shadow-sm">
                                    Learn More <i class="fas fa-arrow-right ms-2 small"></i>
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                                {
                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning w-100 shadow-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger w-100 shadow-sm">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .event-card-premium:hover {
        transform: translateY(-8px) scale(1.01);
    }
</style>
