@model IEnumerable<EventBooking.Models.Event>

@{
    ViewData["Title"] = "Discover Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold text-gradient mb-0">Discover Events</h1>
            <p class="text-muted">Find and book the most exciting events in the city.</p>
        </div>
        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg shadow">
                <i class="fas fa-plus me-2"></i>Create Event
            </a>
        }
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card h-100">
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px; background: var(--secondary-gradient) !important;">
                        <i class="fas fa-calendar-alt fa-4x text-white opacity-50"></i>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <span class="badge bg-soft-primary text-primary" style="background: rgba(99,102,241,0.1)">@item.Category?.Name</span>
                        </div>
                        <h4 class="card-title mb-2">@item.Title</h4>
                        <p class="card-text text-muted mb-4 text-truncate-2">
                            @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                        </p>
                        
                        <div class="d-flex align-items-center mb-1 text-muted small">
                            <i class="fas fa-map-marker-alt me-2"></i>@item.Venue?.Name
                        </div>
                        <div class="d-flex align-items-center mb-4 text-muted small">
                            <i class="fas fa-clock me-2"></i>@item.EventDate.ToString("MMMM dd, yyyy")
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pb-4 mt-auto">
                        <div class="d-grid">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">View Details</a>
                        </div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                            <div class="d-flex justify-content-between mt-3 px-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning text-decoration-none"><i class="fas fa-edit me-1"></i>Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger text-decoration-none"><i class="fas fa-trash me-1"></i>Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
