@model EventBooking.Models.Event

@{
    ViewData["Title"] = Model?.Title + " - Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert" style="background: rgba(16, 185, 129, 0.1); color: #059669;">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert" style="background: rgba(239, 68, 68, 0.1); color: #dc2626;">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow-sm border-0 animate-fade">
                <div class="card-header bg-transparent py-4 px-4 border-0">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <span class="badge bg-soft-primary text-primary mb-2" style="background: rgba(99,102,241,0.1)">@Model.Category?.Name</span>
                            <h1 class="display-5 fw-bold text-dark">@Model.Title</h1>
                        </div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning shadow-sm">
                                <i class="fas fa-edit me-2"></i>Edit Event
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body px-4 pb-4">
                    <div class="row mb-5 g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fas fa-calendar-day text-primary fa-lg"></i>
                                </div>
                                <div>
                                    <p class="text-muted small mb-0">Date & Time</p>
                                    <p class="fw-bold mb-0">@Model.EventDate.ToString("dddd, MMMM dd, yyyy")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fas fa-map-marker-alt text-primary fa-lg"></i>
                                </div>
                                <div>
                                    <p class="text-muted small mb-0">Location</p>
                                    <p class="fw-bold mb-0">@Model.Venue?.Name</p>
                                    <p class="text-muted small mb-0">@Model.Venue?.Address</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4 class="fw-bold mb-3">About this Event</h4>
                    <p class="lead text-muted" style="line-height: 1.8;">@Model.Description</p>
                </div>
            </div>

            <div class="card shadow-sm border-0 animate-fade" style="animation-delay: 0.2s">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4"><i class="fas fa-star text-warning me-2"></i>Reviews</h3>
                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="mb-4 pb-4 border-bottom last-no-border">
                                <div class="d-flex justify-content-between mb-2">
                                    <h6 class="fw-bold mb-0">@review.Member?.FullName</h6>
                                    <div class="text-warning">
                                        @for (int i = 0; i < review.Rating; i++) { <i class="fas fa-star"></i> }
                                    </div>
                                </div>
                                <p class="text-muted">@review.Comment</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted italic">No reviews yet. Be the first to share your experience!</p>
                    }

                    <div class="mt-5 pt-4 bg-light p-4 rounded-3 border">
                        <h5 class="fw-bold mb-3">Leave a Review</h5>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Review" asp-action="Submit" method="post">
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Rating</label>
                                        <select name="rating" class="form-select">
                                            <option value="5">5 Stars - Amazing</option>
                                            <option value="4">4 Stars - Great</option>
                                            <option value="3">3 Stars - Good</option>
                                            <option value="2">2 Stars - Fair</option>
                                            <option value="1">1 Star - Poor</option>
                                        </select>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label">Your Experience</label>
                                        <textarea name="comment" class="form-control" rows="3" placeholder="Tell us what you loved..." required></textarea>
                                    </div>
                                    <div class="col-12 text-end">
                                        <button type="submit" class="btn btn-primary px-4">Post Review</button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <p class="mb-0"><i class="fas fa-info-circle me-2"></i>Please <a asp-area="Identity" asp-page="/Account/Login">Login</a> to leave a review.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card sticky-top shadow animate-fade" style="top: 100px; animation-delay: 0.1s; z-index: 100;">
                <div class="card-body p-4 text-center">
                    <h3 class="fw-bold mb-1">Book Your Spot</h3>
                    <p class="text-muted mb-4 small">Secure your ticket for this event</p>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Booking" asp-action="Book" method="post">
                            <input type="hidden" name="eventId" value="@Model.Id" />
                            <div class="form-group mb-4">
                                <label class="form-label text-start d-block fw-bold small">Number of Tickets</label>
                                <div class="input-group input-group-lg border rounded">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-users text-primary"></i></span>
                                    <input type="number" name="quantity" class="form-control border-0 bg-white" value="1" min="1" max="10" />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 py-3 shadow-sm mb-3">
                                <i class="fas fa-ticket-alt me-2"></i>Book Now
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="bg-light p-4 rounded-3 border mb-4">
                            <p class="mb-3">Log in to book your tickets easily!</p>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary w-100">Login to Book</a>
                        </div>
                    }
                    <div class="mt-2">
                        <a asp-action="Index" class="text-secondary text-decoration-none small"><i class="fas fa-arrow-left me-2"></i>Back to Events</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary { background: rgba(99,102,241,0.1); }
    .last-no-border:last-child { border-bottom: none !important; }
</style>
