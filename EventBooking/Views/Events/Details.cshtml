@model EventBooking.Models.Event

@{
    ViewData["Title"] = Model?.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var remainingCapacity = (int)(ViewData["RemainingCapacity"] ?? 0);
    var isFullyBooked = remainingCapacity <= 0;
}

<!-- CINEMATIC HEADER -->
<div class="position-relative w-100 h-mobile-40 mt-mobile-neg-navbar" style="height: 60vh; margin-top: -80px;">
    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://images.unsplash.com/photo-1514525253440-b393452e8d26" : Model.ImageUrl)" 
         class="w-100 h-100 object-fit-cover" 
         alt="@Model.Title"
         style="mask-image: linear-gradient(to bottom, black 50%, transparent 100%); -webkit-mask-image: linear-gradient(to bottom, black 50%, transparent 100%);">
    
    <div class="position-absolute bottom-0 start-0 w-100 pb-5">
        <div class="container animate-fade-up">
            <span class="badge glass-panel text-white border-primary mb-3 px-3 py-2 rounded-pill">
                <i class="fas fa-tag me-2 text-gold"></i>@(Model?.Category?.Name ?? "Event")
            </span>
            <h1 class="display-2 fw-bold text-white mb-2" style="text-shadow: 0 4px 20px rgba(0,0,0,0.5);">@Model?.Title</h1>
            <div class="d-flex align-items-center gap-4 text-white opacity-90">
                <div class="d-flex align-items-center gap-2">
                    <i class="far fa-calendar text-gold"></i>
                    <span>@(Model?.EventDate.ToString("MMMM dd, yyyy") ?? "TBA")</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <i class="fas fa-map-marker-alt text-gold"></i>
                    <span>@Model.Venue?.Name</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row g-5">
        <!-- LEFT COLUMN: CONTENT -->
        <div class="col-lg-8 animate-fade-up delay-1">
            <!-- Description -->
            <div class="glass-panel p-5 mb-5">
                <h4 class="fw-bold text-white mb-4 border-start border-4 border-warning ps-3">About the Experience</h4>
                <div class="lead text-muted" style="line-height: 1.8;">
                    @Model.Description
                </div>
                
                <div class="mt-5 p-4 rounded-4 bg-white bg-opacity-5 d-flex align-items-center gap-4 border border-light border-opacity-10">
                    <div class="rounded-circle bg-gradient p-1" style="width: 60px; height: 60px; background: var(--primary);">
                        <img src="https://ui-avatars.com/api/?name=@(Model.CreatedBy ?? "A")&background=020617&color=fff" class="rounded-circle w-100 h-100" alt="Curator" />
                    </div>
                    <div>
                        <h6 class="text-white fw-bold mb-0">Curated by @(Model.CreatedBy ?? "Metropolitan Arts")</h6>
                        <small class="text-muted">Official Cultural Partner</small>
                    </div>
                </div>
            </div>

            <!-- Reviews -->
            <div class="glass-panel p-5 mb-5">
                <h4 class="fw-bold text-white mb-4 border-start border-4 border-info ps-3">Community Voices</h4>
                
                @if (Model.Reviews != null && Model.Reviews.Any())
                {
                    <div class="d-flex flex-column gap-3">
                        @foreach (var review in Model.Reviews)
                        {
                            <div class="p-4 rounded-4 bg-white bg-opacity-5 border border-light border-opacity-5 hover-tilt">
                                <div class="d-flex justify-content-between mb-2">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="fw-bold text-white">@review.Member?.FullName</div>
                                         @if (User.IsInRole("Admin"))
                                        {
                                            <form asp-controller="Reviews" asp-action="Delete" method="post" onsubmit="return confirm('Delete review?');">
                                                <input type="hidden" name="id" value="@review.ReviewId" />
                                                <button type="submit" class="btn btn-link p-0 text-danger ms-2 small"><i class="fas fa-trash"></i></button>
                                            </form>
                                        }
                                    </div>
                                    <div class="text-warning small">
                                        @for(int i=0; i<review.Rating; i++) { <i class="fas fa-star"></i> }
                                    </div>
                                </div>
                                <p class="mb-0 text-muted small">"@review.Comment"</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="far fa-comment-dots fa-2x text-muted mb-3"></i>
                        <p class="text-muted">No reviews yet. Be the first to add your voice.</p>
                    </div>
                }
            </div>

            <!-- Inquiry Form -->
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="glass-panel p-5">
                    <h4 class="fw-bold text-white mb-4 border-start border-4 border-success ps-3">Have Questions?</h4>
                    <form asp-controller="Inquiry" asp-action="Submit" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" name="Name" class="form-control" placeholder="Name" required />
                                    <label>Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" name="Email" class="form-control" placeholder="Email" required />
                                    <label>Your Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea name="Message" class="form-control" style="height: 120px" placeholder="Message" required></textarea>
                                    <label>How can we help?</label>
                                </div>
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-outline-light rounded-pill px-4">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
        </div>

        <!-- RIGHT COLUMN: STICKY BOOKING -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 100px; z-index: 10;">
                <div class="glass-panel p-4 animate-fade-up delay-2 border-top border-4 border-primary shadow-lg">
                    <div class="text-center mb-4">
                        <div class="small text-muted text-uppercase tracking-widest fw-bold mb-1">Ticket Price</div>
                        <div class="display-5 fw-bold text-white">£@Model.Price.ToString("F0")</div>
                    </div>

                    @if (isFullyBooked)
                    {
                        <div class="alert alert-danger bg-danger bg-opacity-10 border-danger border-opacity-25 text-danger text-center rounded-3">
                            <i class="fas fa-shield-check me-2"></i>Official Verified Event
                        </div>
                    }
                    else
                    {
                        <!-- Availability Bar -->
                         <div class="mb-4">
                            <div class="d-flex justify-content-between text-muted small mb-1">
                                <span>Availability</span>
                                <span>@remainingCapacity seats left</span>
                            </div>
                            <div class="progress" style="height: 6px; background: rgba(255,255,255,0.1);">
                                @{ var percent = (double)remainingCapacity / Model.Capacity * 100; }
                                <div class="progress-bar bg-gradient" style="width: @percent%; background: var(--primary);"></div>
                            </div>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Booking" asp-action="Book" method="post">
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                
                                <div class="d-flex align-items-center justify-content-between p-3 rounded-3 bg-white bg-opacity-5 mb-4 border border-light border-opacity-10">
                                    <button type="button" class="btn btn-sm btn-outline-light rounded-circle" onclick="updateTickets(-1)" style="width: 32px; height: 32px; padding: 0;">-</button>
                                    <input type="number" name="quantity" id="qty" value="1" min="1" max="@remainingCapacity" class="form-control bg-transparent border-0 text-center text-white fw-bold w-50" readonly />
                                    <button type="button" class="btn btn-sm btn-outline-light rounded-circle" onclick="updateTickets(1)" style="width: 32px; height: 32px; padding: 0;">+</button>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-4 text-white">
                                    <span>Total Value</span>
                                    <span class="h4 mb-0 fw-bold" id="total">£@Model.Price.ToString("F0")</span>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-3 shadow-lg hover-scale">
                                    Confirm Reservation
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary w-100 py-3 shadow-lg mb-2">
                                Register to Book
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light w-100 py-2 small">
                                Member Sign In
                            </a>
                        }
                    }
                    
                    <div class="text-center mt-4">
                        <small class="text-muted d-block mb-1"><i class="fas fa-shield-alt me-1"></i> Secure Transaction</small>
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/ba/Stripe_Logo%2C_revised_2016.svg/2560px-Stripe_Logo%2C_revised_2016.svg.png" height="20" class="opacity-50" style="filter: grayscale(1) invert(1);" alt="Payments" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const price = @Model.Price;
    const max = @remainingCapacity;
    
    function updateTickets(change) {
        const input = document.getElementById('qty');
        let val = parseInt(input.value) + change;
        if(val >= 1 && val <= max) {
            input.value = val;
            document.getElementById('total').innerText = '£' + (val * price).toFixed(0);
        }
    }
</script>
