@model EventBooking.Models.Event

@{
    ViewData["Title"] = Model?.Title + " - Cultural Insight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 mt-4">
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0 animate-slide-up overflow-hidden">
                <div class="card-body p-0">
                    <div class="p-4 p-md-5" style="background: var(--dark-bg); color: white; position: relative; min-height: 350px; display: flex; flex-direction: column; justify-content: center;">
                         <div style="position: absolute; top:0; right:0; opacity: 0.05; font-size: 15rem; pointer-events: none; transform: translate(20%, -20%)">
                            <i class="fas fa-landmark-dome"></i>
                         </div>
                         <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-primary px-3 py-2 rounded-pill me-3">@Model.Category?.Name</span>
                            <span class="small opacity-75"><i class="far fa-clock me-2"></i>Official Metropolitan Event</span>
                         </div>
                         <h1 class="display-3 fw-bold mb-4">@Model.Title</h1>
                         <div class="d-flex flex-wrap gap-5 mt-2">
                            <div class="d-flex align-items-center">
                                <div class="bg-white bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="fas fa-calendar-day fs-4 text-white"></i>
                                </div>
                                <div>
                                    <div class="small opacity-50 text-uppercase tracking-wider" style="font-size: 0.7rem">Scheduled Date</div>
                                    <div class="fw-bold fs-5">@Model.EventDate.ToString("MMMM dd, yyyy")</div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="bg-white bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="fas fa-location-dot fs-4 text-white"></i>
                                </div>
                                <div>
                                    <div class="small opacity-50 text-uppercase tracking-wider" style="font-size: 0.7rem">Venue Location</div>
                                    <div class="fw-bold fs-5">@Model.Venue?.Name</div>
                                </div>
                            </div>
                         </div>
                    </div>

                    <div class="p-4 p-md-5 bg-white">
                        <div class="accent-line"></div>
                        <h4 class="fw-bold mb-4">Event Narrative</h4>
                        <div class="lead text-dark opacity-75 mb-5" style="line-height: 1.8; font-size: 1.25rem;">
                            @Model.Description
                        </div>

                        <div class="mt-5 p-4 rounded-4 bg-light border-0 d-flex align-items-center">
                            <div class="me-4">
                                <img src="https://ui-avatars.com/api/?name=@(Model.CreatedBy ?? "Curator")&background=0f172a&color=fff&bold=true" class="rounded-circle shadow-sm" width="60" alt="Curator" />
                            </div>
                            <div>
                                <h6 class="mb-1 fw-bold fs-5 text-dark">Verified Curator Identity</h6>
                                <p class="mb-0 text-muted">This event is officially curated by <strong>@(Model.CreatedBy ?? "Metropolitan Administration")</strong> and adheres to the city's cultural standards.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Reviews and Booking follow... kept logic but refined copy in UI *@
        </div>

        <div class="col-lg-4">
            <div class="card shadow border-0 animate-slide-up sticky-top" style="top: 120px; animation-delay: 0.1s; border-radius: 28px;">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="bg-soft-primary d-inline-block p-4 rounded-circle mb-4">
                        <i class="fas fa-ticket text-primary fa-3x"></i>
                    </div>
                    <h2 class="fw-bold mb-2">Access Reservation</h2>
                    <p class="text-muted small mb-4">Secure your presence at this metropolitan cultural gathering.</p>
                    
                    <hr class="mb-4 opacity-25" />

                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Booking" asp-action="Book" method="post">
                            <input type="hidden" name="eventId" value="@Model.Id" />
                            <div class="form-group mb-4 text-start">
                                <label class="form-label fw-bold small text-muted text-uppercase tracking-wider">Ticket Volume</label>
                                <div class="input-group input-group-lg border rounded-3 overflow-hidden">
                                    <input type="number" name="quantity" class="form-control border-0 text-center fw-bold" value="1" min="1" max="10" />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 py-3 mb-3 shadow">
                                Confirm Reservation
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="bg-light p-4 rounded-4 mb-4">
                            <p class="small text-muted mb-4 text-center">Metropolitan access requires a verified citizen or observer profile.</p>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary w-100 py-2 shadow-sm">Sign In / Register</a>
                        </div>
                    }
                    
                    <div class="small text-muted opacity-75">
                        <i class="fas fa-shield-check me-2"></i>Official Metropolitan Certification
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .tracking-wider { letter-spacing: 0.12em; }
</style>
