@model EventBooking.Models.Event

@{
    ViewData["Title"] = "Remove Event";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7 reveal">
            <div class="card shadow-lg border-0 animate-slide-up bg-white hover-tilt">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="bg-soft-danger d-inline-block p-4 rounded-circle mb-4">
                        <i class="fas fa-exclamation-triangle text-danger fa-3x"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Remove Event?</h2>
                    <p class="text-muted mb-5">Are you sure you want to remove <strong>@Model.Title</strong>? This action cannot be undone and all bookings will be lost.</p>

                    <div class="bg-light p-4 rounded-4 text-start mb-5">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted small">Event:</span>
                            <span class="fw-bold small">@Model.Title</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted small">Date:</span>
                            <span class="fw-bold small">@Model.EventDate.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted small">Location:</span>
                            <span class="fw-bold small text-truncate ms-2">@Model.Venue?.Name</span>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-danger btn-lg py-3 shadow-sm">
                                <i class="fas fa-trash-alt me-2"></i>Yes, Remove it
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg py-3 border-0">
                                No, keep it
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-danger { background: rgba(239, 68, 68, 0.1); }
</style>
