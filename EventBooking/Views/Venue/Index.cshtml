@model IEnumerable<EventBooking.Models.Venue>

@{
    ViewData["Title"] = "Metropolitan Venue Registry";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-end mb-5 animate-slide-up">
        <div>
            <div class="accent-line mb-3"></div>
            <h1 class="display-4 fw-bold mb-0">Venue Assets</h1>
            <p class="lead text-muted">Managing the institutional spaces that host the city's premier cultural events.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm mb-2">
            <i class="fas fa-plus-square me-2"></i>Register New Asset
        </a>
    </div>

    <div class="card shadow-sm border-0 animate-slide-up reveal hover-tilt" style="animation-delay: 0.2s">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle border-0">
                <thead>
                    <tr>
                        <th class="ps-4 py-3 text-uppercase small fw-bold tracking-wider">Venue Identity</th>
                        <th class="py-3 text-uppercase small fw-bold tracking-wider">Geographic Address</th>
                        <th class="text-end pe-4 py-3 text-uppercase small fw-bold tracking-wider">Operational Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 py-4">
                                <div class="d-flex align-items-center">
                                    <div class="p-2 rounded-3 me-3" style="background: rgba(255,255,255,0.03)">
                                        <i class="fas fa-landmark text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold fs-5">@item.Name</div>
                                        <div class="small text-muted">Institutional Venue</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-muted"><i class="fas fa-map-pin me-2 opacity-50"></i>@item.Address</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning rounded-3 me-2 px-3">
                                    <i class="fas fa-pencil-alt small"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-3 px-3">
                                    <i class="fas fa-ban small"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .tracking-wider { letter-spacing: 0.1em; }
</style>
