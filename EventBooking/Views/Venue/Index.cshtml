@model IEnumerable<EventBooking.Models.Venue>

@{
    ViewData["Title"] = "Manage Venues";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold text-gradient mb-0">Venues & Locations</h1>
            <p class="text-muted">Manage the physical spaces where your cultural events come to life.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-map-marked-alt me-2"></i>Register Venue
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Venue Name</th>
                        <th>Address</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light p-2 rounded-circle me-3 text-primary">
                                        <i class="fas fa-building"></i>
                                    </div>
                                    <span class="fw-bold text-dark">@item.Name</span>
                                </div>
                            </td>
                            <td>
                                <span class="text-muted small">@item.Address</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
