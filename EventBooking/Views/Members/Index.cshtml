@model IEnumerable<EventBooking.Models.Member>

@{
    ViewData["Title"] = "Citizen Registry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-slide-up">
        <div>
            <div class="accent-line mb-3"></div>
            <h1 class="display-5 fw-bold text-dark mb-0">Citizen Registry</h1>
            <p class="lead text-muted mb-0">Manage the metropolitan community.</p>
        </div>
        <div>
            <span class="badge bg-primary rounded-pill px-3 py-2">@Model.Count() Citizens</span>
        </div>
    </div>

    <div class="card border-0 shadow-lg animate-slide-up" style="animation-delay: 0.1s; border-radius: 24px; overflow: hidden;">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3 ps-4 border-0 text-uppercase small fw-bold text-muted tracking-wider">Citizen Identity</th>
                        <th class="py-3 border-0 text-uppercase small fw-bold text-muted tracking-wider">Contact</th>
                        <th class="py-3 border-0 text-uppercase small fw-bold text-muted tracking-wider">System ID</th>
                        <th class="py-3 border-0 text-uppercase small fw-bold text-muted tracking-wider text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-soft-primary rounded-circle p-2 me-3 text-primary fw-bold" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                        @item.FullName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div class="fw-bold">@item.FullName</div>
                                </div>
                            </td>
                            <td class="py-3">
                                <div class="text-muted">@item.Email</div>
                                <div class="small text-muted opacity-75">@item.PhoneNumber</div>
                            </td>
                            <td class="py-3">
                                <span class="font-monospace small text-muted">@item.UserId</span>
                            </td>
                            <td class="text-end pe-4 py-3">
                                <a asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-danger rounded-pill">
                                    <i class="fas fa-user-slash me-1"></i> Banish
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
