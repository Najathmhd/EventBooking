@model IEnumerable<EventBooking.Models.EventCategory>

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold text-gradient mb-0">Event Categories</h1>
            <p class="text-muted">Organize your events by grouping them into meaningful categories.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus-circle me-2"></i>New Category
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Category Name</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-dark">@item.Name</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
