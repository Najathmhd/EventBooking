@model EventBooking.Models.EventCategory

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 animate-slide-up bg-white">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="bg-soft-danger d-inline-block p-4 rounded-circle mb-4">
                        <i class="fas fa-trash text-danger fa-3x"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Delete Category?</h2>
                    <p class="text-muted mb-5">Are you sure you want to delete the <strong>@Model.Name</strong> category?</p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-danger btn-lg py-3 shadow-sm">
                                Confirm Deletion
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">
                                Cancel and go back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-danger { background: rgba(239, 68, 68, 0.1); }
</style>
