@model EventBooking.Models.EventCategory

@{
    ViewData["Title"] = "New Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 animate-slide-up">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-5">
                        <div class="bg-soft-primary d-inline-block p-3 rounded-circle mb-3">
                            <i class="fas fa-tags text-primary fa-2x"></i>
                        </div>
                        <h2 class="fw-bold">New Category</h2>
                        <p class="text-muted">Add a new theme to group upcoming events.</p>
                    </div>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger small py-2"></div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold small">Category Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g. Music, Art, Tech" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="fas fa-check-circle me-2"></i>Create Category
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Index" class="text-muted text-decoration-none small"><i class="fas fa-undo me-2"></i>Go back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .bg-soft-primary { background: rgba(99,102,241,0.1); }
</style>
