@page
@model Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Internal.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container pt-navbar">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card glass-panel border-0 p-4 p-md-5 animate-slide-up">
                <div class="text-center mb-4">
                    <div class="bg-soft-primary d-inline-block p-3 rounded-circle mb-3">
                        <i class="fas fa-user-circle fa-2x text-primary"></i>
                    </div>
                    <h2 class="fw-bold text-white">Welcome Back</h2>
                    <p class="text-white-50">Sign in to access your bookings</p>
                </div>
                
                <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-white-50">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-white-50">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input bg-transparent border-secondary" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label text-white-50">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="small text-primary text-decoration-none">Forgot password?</a>
                    </div>
                    
                    <button id="login-submit" type="submit" class="btn btn-primary w-100 py-3 mb-3 shadow-sm hover-tilt">Log in</button>
                    
                    <div class="text-center">
                        <p class="text-white-50 small mb-0">
                            Don't have an account? 
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Register</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
