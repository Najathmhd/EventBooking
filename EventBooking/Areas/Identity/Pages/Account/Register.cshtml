@page
@model Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Internal.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container pt-navbar">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-panel border-0 p-4 p-md-5 animate-slide-up">
                <div class="text-center mb-4">
                    <div class="bg-soft-primary d-inline-block p-3 rounded-circle mb-3">
                        <i class="fas fa-user-plus fa-2x text-primary"></i>
                    </div>
                    <h2 class="fw-bold text-white">Create Account</h2>
                    <p class="text-white-50">Join the Metropolitan Community</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-white-50">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="text-white-50">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.ConfirmPassword" class="text-white-50">Confirm</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                    
                    <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-3 mb-3 shadow-sm hover-tilt">Register</button>
                    
                     <div class="text-center">
                        <p class="text-white-50 small mb-0">
                            Already have an account? 
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none">Log in</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
